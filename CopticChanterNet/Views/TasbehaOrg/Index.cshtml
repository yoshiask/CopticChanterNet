@model CopticChanterNet.Views.TasbehaOrg.IndexModel

@{
    @using (Html.BeginForm("Convert", "TasbehaOrg", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0" style="height: 100%; width: 100%;">
            <tr>
                <th colspan="2" align="center">Tasbeha.org Lyrics Library Importer</th>
            </tr>
            <tr>
                <td>Lyric ID: </td>
                <td>
                    @Html.TextBoxFor(m => m.LyricId)
                </td>
            </tr>
            <tr>
                <td>Outer HTML content of lyrics page: </td>
                <td>
                    <textarea asp-for="Html" class="form-control"></textarea>
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>
    }
}
